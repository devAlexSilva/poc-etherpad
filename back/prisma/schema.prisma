generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String   
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  creator_pad Pad[]

  subOfPad subOfPad[]

  @@map("users")
}

model Pad {
  id Int @id @default(autoincrement())
  name String
  name_hash String @unique
  private Boolean @default(false)
  key String
  user User @relation(fields: [creator_user], references: [id], onDelete: Cascade)
  creator_user Int

  subOfPad subOfPad[]

  @@map("pads")
}

model subOfPad {
  user_id Int
  pad_id Int
  users User @relation(fields: [user_id], references: [id])
  pads Pad @relation(fields: [pad_id], references: [id])

  @@unique([user_id, pad_id], map: "subs_of_pad")
}